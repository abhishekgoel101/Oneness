<!DOCTYPE html>
<html>

<% include partials/header  %>


<body>

<div id="wrapper">
<% include partials/sidebar  %>
    
    <div id="page-content-wrapper" style="padding:0;margin-top:60px"> <!--Margin Top is new-->
             <div class="container-fluid page-content-div" style="padding:0">
                <div class="row">
                   <div class="col-lg-12 scoll-possible" style="padding:0">
    
    
    <style>
    body{
      color: #575757 !important;
    }
    .content-div{
      margin-top:2%;
      width: 100%;
    }
    .null-link{
      color: black
    }
    .null-link:hover{
      color:black;
      text-decoration: none;
    }
    .panel-main-div:hover{
      box-shadow:0 3px 10px 0 rgba(115,143,147,.2);
    }
    @media(max-width: 768px){
      .content-div{
        margin-top:5%;
        width: 100% !important;
      }
    }
    </style>
    
    <div class='content-div'>
            <div class="container">
                <div class="card allSidesSoft" style="background:rgb(249, 249, 249)">
                  <div class="card-body">
    
                  
                    <div class="d-flex pc">
                        <div class="image-container">
                            <img src="<%=user.image%>" id="user-profile-image" style="width: 150px; height: 150px" class="img-thumbnail allSidesSoft" />
                        </div>
                    </div>
                              
    
                    <br />
                    <br />
                
                    <div class="col-sm-6">
                      <div class="panel panel-default allSidesSoft panel-main-div">
                        <div class="panel-heading">Email</div>
                        <div class="panel-body"><%=user.email%></div>
                      </div>
                    </div>
                
    
                
                    <div class="col-sm-6">
                      <div class="panel panel-default allSidesSoft panel-main-div">
                        <div class="panel-heading">Gender</div>
                        <div class="panel-body" style="text-transform: capitalize;"><%=user.gender%></div>
                      </div>
                    </div>
                
    
                
                    <div class="col-sm-6">
                      <div class="panel panel-default allSidesSoft panel-main-div">
                        <div class="panel-heading">Name</div>
                        <div class="panel-body"><%=user.name%></div>
                      </div>
                    </div>
                
    
                
                    <div class="col-sm-6">
                      <div class="panel panel-default allSidesSoft panel-main-div">
                        <div class="panel-heading">City</div>
                        <div class="panel-body"><%=user.city%></div>
                      </div>
                    </div>
                                

              <% if(user.interests && user.interests.length)
              {
               %> 
                <div class="col-sm-12">
                  <div class="panel panel-default allSidesSoft panel-main-div">
                    <div class="panel-heading">Interests</div>
                    <div class="panel-body">
                 <%   for(var i=0;i<user.interests.length;i++)
                 {
                   %>
                      <span class="tag-still" style="border:1px solid rgb(136, 154, 250);text-transform: capitalize"><%=user.interests[i]%></span>
                  <%
                 }
                 %>                   
                    </div>
                  </div>
                </div>
              <%
              }
              %>
              
            

          <% if(user.journey)
          {
            %>            
              
                <div class="col-sm-12">
                  <div class="panel panel-default allSidesSoft panel-main-div">
                    <div class="panel-heading">About journey</div>
                    <div class="panel-body">
                     <%=user.journey%>
                    </div>
                  </div>
                </div>
          <%
          }
          %>  


          <% if(user.expectation)
          {
            %>             
              
                <div class="col-sm-12">
                  <div class="panel panel-default allSidesSoft panel-main-div">
                    <div class="panel-heading">Expectations from communities</div>
                    <div class="panel-body">
                      <%=user.expectation%>
                    </div>
                  </div>
                </div>
          <%
          }
          %>  


    
            </div>
          </div>
        </div>
    </div>
    <br />
    
    </div>
    </div>
    </div>
    </div>
      <br />
    
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"/>
    <script src="/javascripts/Common.js"></script>
    
    <script>
    var selector = '.nav li';
    $(selector).removeClass('active');
    </script>
    <script>
    
    </script>
    
    </div>
    
    </body>
    </html>
    